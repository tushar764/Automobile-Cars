<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <style>
        body {
            background-color: white;
        }

        .background-radial-gradient {
            background-image: url('static/bg.jpg'); /* Ensure background image is applied */
            background-size: cover;
            background-position: center;
        }

        .bg-glass {
            background-color: rgba(223, 203, 203, 0.511); /* Glass effect */
            backdrop-filter: saturate(200%) blur(10px);
            border: none;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar1') %>
    <div class="container mt-4">
        <!-- Section: Design Block -->
        <section class="background-radial-gradient overflow-hidden">
            <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
                <div class="row gx-lg-5 align-items-center mb-5">
                    <!-- Left column with heading -->
                    <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                        <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(220, 15%, 92%)">
                            Welcome back<br>
                            <span style="color: hsl(240, 7%, 92%)">Login to Automobiles</span>
                        </h1>
                        <h3 class="mb-4 opacity-70" style="color: hsl(180, 19%, 92%)">
                            Access your account and explore the world of automobiles.
                        </h3>
                    </div>

                    <!-- Right column with form -->
                    <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                        <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                        <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                        <div class="card bg-glass">
                            <div class="card-body px-4 py-5 px-md-5">
                                <!-- Login form -->
                                <form method="post" action="/login">
                                    <% if (messages.error) { %>
                                        <div class="alert alert-danger">
                                            <strong><%= messages.error %></strong>
                                        </div>
                                    <% } %>

                                    <h1 class="mb-3 h3">Login</h1>

                                    <!-- Email input -->
                                    <div class="form-outline mb-4">
                                        <input id="form3Example3" class="form-control" type="email" name="email" placeholder="Enter your email" required>
                                        <label class="form-label" for="form3Example3">Email address</label>
                                    </div>

                                    <!-- Password input -->
                                    <div class="form-outline mb-4">
                                        <input id="form3Example4" class="form-control" type="password" name="password" placeholder="Enter your password" required>
                                        <label class="form-label" for="form3Example4">Password</label>
                                    </div>

                                    <!-- Submit button -->
                                    <button class="btn btn-primary btn-block mb-4" type="submit">Sign in</button>

                                    <!-- Register link -->
                                    <div class="text-center">
                                        <p>Don't have an account? <a href="/register">Register</a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>
