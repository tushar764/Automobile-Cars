        }

        .production-title {
            font-size: 3em;
            color: white;
            text-align: center;
            margin-bottom: 30px;
            animation: fadeInDown 1s ease-in-out;
        }

        .production-text {
            font-size: 1.2em;
            color: #495057;
            text-align: justify;
            line-height: 1.6;
            animation: fadeIn 1.5s ease-in-out;
