            margin-top: 40px;
            margin-bottom: 20px;
            text-align: center;
        }

        .section-text {
            text-align: justify;
        }

        /* Keyframe animations */
        @keyframes fadeIn {
            0% {
                opacity: 0;
            }

            100% {
                opacity: 1;
            }
        }

        @keyframes fadeInDown {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideIn {
            0% {
                opacity: 0;
                transform: translateX(-30px);
            }

            100% {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .d-flex {
            display: flex;
            justify-content: flex-end;
            align-items: flex-start;
        }

        .section-text {
            margin-left: 30px;
            max-width: 400px;
            font-size: 22px;
            font-family: ui-monospace;
        }

        .card {
            width: 300px;
        }

        /* Animation for images */
        .animated-image {
            animation: slideIn 1s ease forwards;
        }

        .card-text{
